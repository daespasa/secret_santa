generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  googleId  String   @unique
  profilePhoto String?
  createdAt DateTime @default(now())
  groups    Group[]  @relation("GroupAdmin")
  memberships GroupUser[]
  giving    Assignment[] @relation("GivingAssignments")
  receiving Assignment[] @relation("ReceivingAssignments")
}

model Group {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  priceMax    Float?
  minParticipants Int     @default(2)
  eventDate   DateTime?
  drawDeadline DateTime?
  rules       String?
  icon        String?
  color       String?
  joinToken   String     @unique
  drawnAt     DateTime?
  archived    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  admin       User       @relation("GroupAdmin", fields: [adminUserId], references: [id])
  adminUserId Int
  participants GroupUser[]
  assignments Assignment[]
}

model GroupUser {
  group   Group @relation(fields: [groupId], references: [id])
  groupId Int
  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  createdAt DateTime @default(now())

  @@id([groupId, userId])
}

model Assignment {
  group         Group @relation(fields: [groupId], references: [id])
  groupId       Int
  giver         User  @relation("GivingAssignments", fields: [giverUserId], references: [id])
  giverUserId   Int
  receiver      User  @relation("ReceivingAssignments", fields: [receiverUserId], references: [id])
  receiverUserId Int

  @@id([groupId, giverUserId])
  @@unique([groupId, receiverUserId])
}
