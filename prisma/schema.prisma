generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  googleId  String?   @unique
  password  String?
  profilePhoto String?
  createdAt DateTime @default(now())
  groups    Group[]  @relation("GroupAdmin")
  memberships GroupUser[]
  notifications Notification[]
}

model Group {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  priceMax    Float?
  minParticipants Int     @default(2)
  eventDate   DateTime?
  drawDeadline DateTime?
  rules       String?
  icon        String?
  color       String?
  joinToken   String     @unique
  drawnAt     DateTime?
  archived    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  admin       User       @relation("GroupAdmin", fields: [adminUserId], references: [id])
  adminUserId Int
  participants GroupUser[]
  assignments Assignment[]
}

model GroupUser {
  id      Int   @id @default(autoincrement())
  group   Group @relation(fields: [groupId], references: [id])
  groupId Int
  user    User?  @relation(fields: [userId], references: [id])
  userId  Int?
  
  // Campos para invitados (sin cuenta)
  guestName  String?
  guestEmail String?
  isGuest    Boolean @default(false)
  
  createdAt DateTime @default(now())

  givingAssignments Assignment[] @relation("GivingAssignments")
  receivingAssignments Assignment[] @relation("ReceivingAssignments")

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([guestEmail])
}

model Assignment {
  id             Int       @id @default(autoincrement())
  group          Group     @relation(fields: [groupId], references: [id])
  groupId        Int
  giver          GroupUser @relation("GivingAssignments", fields: [giverParticipantId], references: [id])
  giverParticipantId Int
  receiver       GroupUser @relation("ReceivingAssignments", fields: [receiverParticipantId], references: [id])
  receiverParticipantId Int

  @@unique([groupId, giverParticipantId])
  @@unique([groupId, receiverParticipantId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type      String   // 'draw_completed', 'group_invite', 'group_update', etc.
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, read])
}
