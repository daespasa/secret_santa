<html lang="es" class="h-full">
  <head>
    <%- include('./head') %>
    <title>
      <%= typeof title !== 'undefined' ? title : 'PÃ¡gina de Error' %>
    </title>
    <% if (typeof description !== 'undefined') { %>
    <meta name="description" content="<%= description %>" />
    <% } %>
  </head>
  <body class="h-full flex flex-col">
    <div
      class="flex-1 flex flex-col bg-gray-50 pt-<%= typeof headerOffset !== 'undefined' ? headerOffset : '0' %>"
